---
import Header from "../components/sections/header/header.astro";
import SmoothScroll from "../components/common/smooth-scroll.astro";
import "modern-normalize/modern-normalize.css";
import "@fontsource/ibm-plex-sans/400.css";
import "@fontsource/ibm-plex-sans/500.css";
import "@fontsource/ibm-plex-sans/700.css";
import "@fontsource/ibm-plex-mono/400.css";
import "@fontsource/ibm-plex-mono/500.css";
import "../styles/index.css";
import "../styles/lenis.css";
import { getTranslations, defaultLocale } from "../i18n/utils";

// Preload critical fonts to avoid render-blocking chain
import plexSans400 from "@fontsource/ibm-plex-sans/files/ibm-plex-sans-latin-400-normal.woff2?url";
import plexSans700 from "@fontsource/ibm-plex-sans/files/ibm-plex-sans-latin-700-normal.woff2?url";
import plexMono400 from "@fontsource/ibm-plex-mono/files/ibm-plex-mono-latin-400-normal.woff2?url";

const lang = Astro.currentLocale ?? defaultLocale;
const t = getTranslations(lang);

const seo = {
  title: t("seo.title"),
  description: t("seo.description"),
  keywords: t("seo.keywords"),
  url: "https://angelozdev.com",
  image: "/angelozam.jpeg",
  author: "Angelo Zambrano",
  twitterHandle: "@angelozdev",
};

const ogLocale = lang === "es" ? "es_CO" : "en_US";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Angelo Zambrano",
  url: seo.url,
  image: `${seo.url}${seo.image}`,
  jobTitle: "Senior Software Engineer & Mobile Team Lead",
  worksFor: {
    "@type": "Organization",
    name: "Ubidots",
  },
  address: {
    "@type": "PostalAddress",
    addressLocality: "Medell√≠n",
    addressCountry: "Colombia",
  },
  sameAs: [
    "https://www.linkedin.com/in/angelozdev/",
    "https://www.github.com/angelozdev",
  ],
  knowsAbout: [
    "TypeScript",
    "React Native",
    "React",
    "Node.js",
    "Python",
    "Mobile Development",
    "Frontend Architecture",
  ],
};
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <!-- Theme initialization script (must run before CSS to prevent FOUC) -->
    <script is:inline>
      (function() {
        const STORAGE_KEY = "theme-preference";
        const THEME_ATTRIBUTE = "data-theme";

        function getSystemPreference() {
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        }

        function getStoredTheme() {
          try {
            const stored = localStorage.getItem(STORAGE_KEY);
            if (stored === "light" || stored === "dark") {
              return stored;
            }
            return null;
          } catch (e) {
            return null;
          }
        }

        function getResolvedTheme() {
          const stored = getStoredTheme();
          if (stored === "light" || stored === "dark") {
            return stored;
          }
          return getSystemPreference();
        }

        const theme = getResolvedTheme();
        document.documentElement.setAttribute(THEME_ATTRIBUTE, theme);
      })();
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#ffffff" />

    <!-- Preload critical fonts -->
    <link rel="preload" as="font" type="font/woff2" href={plexSans400} crossorigin />
    <link rel="preload" as="font" type="font/woff2" href={plexSans700} crossorigin />
    <link rel="preload" as="font" type="font/woff2" href={plexMono400} crossorigin />

    <!-- Primary Meta Tags -->
    <title>{seo.title}</title>
    <meta name="title" content={seo.title} />
    <meta name="description" content={seo.description} />
    <meta name="author" content={seo.author} />
    <meta name="keywords" content={seo.keywords} />
    <link rel="canonical" href={seo.url} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={seo.url} />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={`${seo.url}${seo.image}`} />
    <meta property="og:locale" content={ogLocale} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={seo.url} />
    <meta name="twitter:title" content={seo.title} />
    <meta name="twitter:description" content={seo.description} />
    <meta name="twitter:image" content={`${seo.url}${seo.image}`} />
    <meta name="twitter:creator" content={seo.twitterHandle} />

    <!-- Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <SmoothScroll />
  </body>
</html>
