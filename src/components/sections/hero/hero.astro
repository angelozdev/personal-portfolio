---
import Button from "../../common/button.astro";
import Container from "../../common/container.astro";
import InlineList from "../../common/inline-list.astro";
import Divider from "../../common/divider.astro";
import { stack } from "../../../data/stack";
import { Sections } from "../../../constants/sections";
import {
  getTranslations,
  defaultLocale,
  type TranslationKey,
} from "../../../i18n/utils";

const t = getTranslations(Astro.currentLocale ?? defaultLocale);

const metricsKeys: TranslationKey[] = [
  "metrics.years",
  "metrics.app",
  "metrics.cicd",
  "metrics.testing",
  "metrics.consulting",
];
---

<section class="hero" id={Sections.HERO}>
  <Container maxWidth="md">
    <div class="hero__wrapper">
      <div class="hero__photo">
        <img
          src="/angelozam.jpeg"
          alt="Angelo Zambrano"
          class="hero__image"
          width="200"
          height="200"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="hero__content">
        <div>
          <h1 class="hero__name">Angelo Zambrano</h1>
          <Divider />
          <p class="hero__title">{t("hero.title")}</p>
        </div>
        <ul class="hero__metrics">
          {metricsKeys.map((key) => <li>{t(key)}</li>)}
        </ul>
        <div class="hero__cta">
          <Button href={`#${Sections.PROJECTS}`} variant="primary">
            {t("hero.cta.projects")}
          </Button>
          <Button href={`#${Sections.CONTACT}`} variant="secondary">
            {t("hero.cta.contact")}
          </Button>
        </div>
        <div class="hero__stack">
          <InlineList items={stack} />
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  .hero {
    padding: var(--space-20) var(--space-0);
  }

  .hero__wrapper {
    display: flex;
    align-items: center;
    gap: var(--space-16);
  }

  .hero__photo {
    flex-shrink: 0;
  }

  .hero__image {
    width: 200px;
    height: 200px;
    border-radius: var(--radius-full);
    object-fit: cover;
    background-color: var(--color-gray-200);
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .hero__name {
    font-family: var(--font-mono);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-text);
    margin: var(--space-0);
    letter-spacing: var(--tracking-tight);
    text-transform: uppercase;
  }

  .hero__title {
    font-size: var(--text-xl);
    font-weight: var(--font-normal);
    color: var(--color-text);
    margin: var(--space-0);
    line-height: var(--leading-relaxed);
  }

  .hero__metrics {
    font-size: var(--text-base);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    margin: var(--space-0);
    padding-left: var(--space-5);
    line-height: var(--leading-relaxed);
    list-style: disc;
    text-align: left;
  }

  .hero__metrics li {
    margin-bottom: var(--space-1);
  }

  .hero__cta {
    display: flex;
    gap: var(--space-3);
  }

  @media (max-width: 768px) {
    .hero__wrapper {
      flex-direction: column;
      text-align: center;
      gap: var(--space-4);
    }

    .hero__cta {
      justify-content: center;
    }
  }
</style>
