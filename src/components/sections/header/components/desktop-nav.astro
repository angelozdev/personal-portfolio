---
import Anchor from "../../../common/anchor.astro";
import Switcher from "../../../common/switcher.astro";
import ThemeToggle from "../../../common/theme-toggle/theme-toggle.astro";

interface NavItem {
  href: string;
  label: string;
}

interface LangItem {
  href: string;
  label: string;
  isActive: boolean;
  hreflang: string;
}

interface Props {
  navItems: NavItem[];
  langItems: LangItem[];
}

const { navItems, langItems } = Astro.props;
---

<ul class="desktop-nav">
  {
    navItems.map(({ href, label }) => (
      <li class="desktop-nav__item">
        <Anchor fontSize="lg" fontWeight="medium" href={href}>
          {label}
        </Anchor>
      </li>
    ))
  }
</ul>
<div class="desktop-nav__controls">
  <ThemeToggle />
  <Switcher items={langItems} ariaLabel="Language" class="desktop-nav__lang" />
</div>

<style>
  .desktop-nav {
    padding: var(--space-0);
    margin: var(--space-0);
    margin-right: auto;
    list-style: none;
    display: flex;
  }

  .desktop-nav__item {
    margin: 0 var(--space-4);
  }

  .desktop-nav__controls {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  @media (max-width: 1024px) {
    .desktop-nav {
      display: none;
    }

    .desktop-nav__controls {
      display: none;
    }

    :global(.desktop-nav__lang) {
      display: none;
    }
  }
</style>
